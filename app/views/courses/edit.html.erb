<div class = "d-flex flex-column align-items-center justify-contents-center">  
  <div class="card text-white bg-success mb-3" style="width: 18rem; margin-top: 1rem;">
    <div class="card-header"><h1>Editing course</h1></div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text"><%= render "form", course: @course %></p>
    </div>
  </div>

  <div>
      <%= link_to "Show this course", (@course), class: "btn btn-outline-success" %> |
      <%= link_to "Back to courses", courses_path, class: "btn btn-outline-danger" %>
  </div>
</div>